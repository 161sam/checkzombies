[Unit]
Description=checkzombies watch service
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/env checkzombies --watch --no-log-file
Restart=always
RestartSec=5s
User=root
Environment=CHECKZOMBIES_LOG_SYSLOG=1
Environment=CHECKZOMBIES_LOG_LEVEL=INFO
NoNewPrivileges=true
PrivateTmp=true
ProtectHome=true
ProtectControlGroups=true
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectSystem=full
RestrictRealtime=true

[Install]
WantedBy=multi-user.target
